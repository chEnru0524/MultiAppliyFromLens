<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnTxtInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="@string/btnTextInput"
        app:layout_constraintStart_toEndOf="@+id/imgbtnSelf"
        tools:layout_editor_absoluteY="428dp" />

    <ImageButton
        android:id="@+id/imgbtnSelf"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnBoard"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="133dp" />

    <ImageButton
        android:id="@+id/imgbtnCom"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imgbtnBoard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="132dp" />

    <ImageButton
        android:id="@+id/imgbtnBoard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="133dp" />
</android.support.constraint.ConstraintLayout>